<div class="row">
  <div data-hook="bill_address_wrapper" class="col-md-6 col-sm-6 col-xs-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h1 class="panel-title"><%= Spree.t(:billing_address) %></h1>
        </div>

        <div class="panel-body">
          <%= render partial: 'spree/admin/shared/address', locals: { address: billing_address } %>
        </div>
      </div>
    </div>
  <div data-hook="ship_address_wrapper" class="col-md-6 col-sm-6 col-xs-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h1 class="panel-title"><%= Spree.t(:shipping_address) %></h1>
        </div>

        <div class="panel-body">
          <%= render partial: 'spree/admin/shared/address', locals: { address: shipping_address } %>
        </div>
      </div>
    </div>
</div>